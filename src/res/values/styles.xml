<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TxtMenu">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/menu_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">@dimen/bottom_tabbar_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/search_type_bg</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/bottom_tabbar_text_size</item>
    </style>

    <style name="RadioButtonCategory">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">@dimen/radio_button_favorite_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/search_type</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">#00A000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/radio_button_category_text_size</item>
    </style>

</resources>