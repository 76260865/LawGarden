<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_gravity="center"
        android:background="@drawable/top_background"
        android:gravity="center"
        android:text="@string/txt_person_center"
        android:textColor="#5A7C7C"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/user_info_text_height"
                android:gravity="center"
                android:textColor="#5A7C7C"
                android:textIsSelectable="true"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#dedede" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/user_info_text_height"
                android:gravity="center"
                android:text="购买专题:"
                android:textColor="#5A7C7C"
                android:textIsSelectable="true"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/list_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9F9F9"
                android:cacheColorHint="#00000000"
                android:divider="#dedede"
                android:dividerHeight="1dip"
                android:listSelector="@drawable/item_selector" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#dedede" />

            <TextView
                android:id="@+id/txt_about_us"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/user_info_text_height"
                android:gravity="center"
                android:text="@string/txt_about_us_text"
                android:textColor="#5A7C7C"
                android:textIsSelectable="true"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#dedede" />

            <TextView
                android:id="@+id/txt_about_us_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:autoLink="all"
                android:text="@string/txt_about_us"
                android:textColor="#5A7C7C"
                android:textIsSelectable="true"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dip" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:text="检查更新"
                android:textColor="#78AA84" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dip" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:text="注销"
                android:textColor="#78AA84" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>