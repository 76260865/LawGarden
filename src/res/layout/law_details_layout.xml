<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_background"
        android:gravity="center"
        android:minHeight="@dimen/title_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_article_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#5A7C7C"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_article_favorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:src="@drawable/list_start" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_article_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:paddingBottom="10dip"
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:textSize="18sp" />
    </ScrollView>

</LinearLayout>